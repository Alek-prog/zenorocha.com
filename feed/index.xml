---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>https://zenorocha.com/blog</id>
  <title>Blog - Zeno Rocha</title>
  <icon>https://zenorocha.com/favicon.ico</icon>
  <link href="https://zenorocha.com/feed/index.xml" rel="self" />
  <link href="https://zenorocha.com/blog" />
  {% for post in site.posts limit:10 %}
  {% if post.layout == 'post' %}
  <entry>
    <id>https://zenorocha.com{{ post.id }}</id>
    <title>{{ post.title | strip_html }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <link href="https://zenorocha.com{{ post.url }}" />
    <author>
      <name>Zeno Rocha</name>
      <uri>https://zenorocha.com/</uri>
    </author>
    <content type="html">
      {{ post.content | replace: "src='/assets/", "src='https://zenorocha.com/assets/" | xml_escape }}
    </content>
  </entry>
  {% endif %}
  {% endfor %}
</feed>